# Production Environment Configuration Template
# Copy this file to .env and update with your production values

# ============================================
# APPLICATION SETTINGS
# ============================================

APP_NAME="PEPSICO ENGINEERING CMMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Jakarta

# Increase bcrypt rounds for production security
BCRYPT_ROUNDS=12

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=error
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=null

# ============================================
# DATABASE CONFIGURATION
# ============================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cmmseng
DB_USERNAME=cmmseng_user
DB_PASSWORD=

# ============================================
# SESSION CONFIGURATION
# ============================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# CACHE CONFIGURATION
# ============================================

# Options: file, database, redis
CACHE_STORE=database
CACHE_PREFIX=cmms_

# ============================================
# QUEUE CONFIGURATION
# ============================================

# Options: sync, database, redis
# Use database for production with supervisor workers
QUEUE_CONNECTION=database

# ============================================
# MAIL CONFIGURATION
# ============================================

# Mail driver: smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=smtp

# SMTP Settings (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: AWS SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# ============================================
# FILESYSTEM CONFIGURATION
# ============================================

# Options: local, public, s3
FILESYSTEM_DISK=local

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_URL=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================

# Uncomment if using Redis for cache/session/queue
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_CACHE_DB=1

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Get chat ID by sending message to bot and checking:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=

# ============================================
# CMMS BUSINESS CONFIGURATION
# ============================================

# Labour cost per hour (in IDR)
CMMS_LABOUR_RATE_PER_HOUR=50000

# Downtime cost per hour (in IDR)
CMMS_DOWNTIME_COST_PER_HOUR=1000000

# PM grace period in days (before status becomes Overdue)
CMMS_PM_GRACE_PERIOD_DAYS=1

# ============================================
# BROADCASTING (Optional)
# ============================================

BROADCAST_CONNECTION=log
# BROADCAST_DRIVER=pusher

# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ============================================
# VITE CONFIGURATION
# ============================================

VITE_APP_NAME="${APP_NAME}"

# ============================================
# SECURITY SETTINGS
# ============================================

# Enable these for enhanced security
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_SECURE_COOKIE=true

# ============================================
# THIRD-PARTY SERVICES (Optional)
# ============================================

# Sentry Error Tracking
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# Google Analytics
# GOOGLE_ANALYTICS_ID=

# ============================================
# NOTES FOR PRODUCTION SETUP
# ============================================

# 1. Generate APP_KEY:
#    php artisan key:generate

# 2. Never commit this file to version control
#    Keep it secure on production server only

# 3. Set proper file permissions:
#    chmod 600 .env
#    chown www-data:www-data .env

# 4. After configuring, run:
#    php artisan config:cache
#    php artisan route:cache
#    php artisan view:cache

# 5. Test configuration:
#    php artisan config:show
#    php artisan about

# ============================================
# BACKUP REMINDER
# ============================================

# Always backup your .env file before making changes
# Store backup copy in secure location off-server
